[user]
    name = Liam Butterworth
    email = account@liambutterworth.me
[credential]
    helper = cache --timeout=3600
[core]
    editor = vim
[diff]
    tool = vimdiff
[alias]
    log-long = log --pretty=format:"%C(red)%h%C(yellow)%d\\ %C(green)%ad\\ %C(blue)<%an>%n%C(white)%s%n" --date=relative
    log-graph = log-pretty --graph
    ammend = commit --amend
    info = config --list
    root = !cd $(git rev-parse --show-toplevel) && echo $(pwd)
    edits = diff --color-words
    changed = diff-tree --no-commit-id --name-only -r
    staged = diff --cached
    unstage = rm --cached
    whoami = !git config user.name && git config user.email
    authors = !sh -c 'git log --format="%aN" | sort -k 2 -u'
