#
# Git Config
#

[alias]
    ammend = commit --amend
    authors = !sh -c 'git log --format="%aN" | sort -k 2 -u'
    changed = diff-tree --name-only
    edits = diff --color-words
    info = config --list
    log-long = log --pretty=format:"%C(red)%h%C(yellow)%d\\ %C(green)%ad\\ %C(blue)<%an>%n%C(white)%s%n" --date=relative
    log-graph = log-long --graph
    merge-test = merge --no-commit --no-ff
    root = rev-parse --show-toplevel
    staged = diff --cached
    unstage = reset --
    whoami = !git config user.name && git config user.email
[core]
    editor = vim
[credential]
    helper = cache --timeout=3600
[diff]
    tool = vimdiff
[user]
    name = Liam Butterworth
    email = liambutterworth@randallreilly.com
