#
# Git Config
#

[alias]
    a = add
    c = commit -m
    ca = commit --amend
    co = checkout
    d = diff
    ll = log --pretty=format:"%C(red)%h%C(yellow)%d\\ %C(green)%ad\\ %C(blue)<%an>%n%C(white)%s%n" --date=relative
    lg = ll --graph
    m = merge
    mt = merge --no-commit --no-ff
    dir = rev-parse --show-toplevel
    s = status
    st = stash
    un = reset HEAD --
    who = !git config user.name && git config user.email
[core]
    editor = nvim
[credential]
    helper = cache --timeout=3600
[diff]
    tool = nvim -d
[user]
    name = Liam Butterworth
    email = liambutterworth@randallreilly.com
