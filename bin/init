#!/bin/bash

cwd=$(dirname $0)

ln -s ~/.vimrc ${path}/../env/.vimrc
ln -s ~/.tmux.conf ${path}/../env/.tmux.conf
ln -s ~/.zshrc ${path}/.././env/zshrc

mkdir -p ~/.vim ${path}/../env/plugins
ln -s ~/.vim/plugins ${path}/../env/plugins
git submodule update --remote --init

git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
~/.fzf/install
