#!/bin/bash

# install submodules
git submodule update --init --recursive --remote
~/.dotfiles/zsh/plugins/fzf/install --bin

# create directories
mkdir -p ~/.terminfo ~/.cache/zsh ~/.cache/vim/{swap,backup,undo}

# symlink dotfiles
ln -sf ~/.dotfiles/gitconfig ~/.gitconfig
ln -sf ~/.dotfiles/tmux.conf ~/.tmux.conf
ln -sf ~/.dotfiles/zshrc ~/.zshrc
ln -sf ~/.dotfiles/zsh ~/.zsh
ln -sf ~/.dotfiles/vimrc ~/.vimrc
ln -sf ~/.dotfiles/vim ~/.vim
ln -sf ~/.dotfiles/ctags.d ~/.ctags.d
ln -sf ~/.dotfiles/phpcs.xml ~/.phpcs.xml
ln -sf ~/.dotfiles/ignore ~/.ignore

# update terminfo
tic -o $HOME/.terminfo tmux.terminfo
tic -o $HOME/.terminfo tmux-256color.terminfo
tic -o $HOME/.terminfo xterm-256color.terminfo
