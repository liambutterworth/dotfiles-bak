#!/bin/sh

mkdir -p ~/.config ~/.cache/nvim/{swap,undo}
ln -sf ~/.dotfiles/{alacritty,docker,git,fish,nvim,tmux} ~/.config
ln -sf ~/.dotfiles/ctags.d ~/.ctags.d

curl -fLo ~/.config/neovim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

nvim +PluginInstall +qall
