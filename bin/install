#!/bin/bash

# download antigen and pathogen
curl -L git.io/antigen > ~/.zsh/antigen.zsh --create-dirs
curl -LSso ~/.vim/autoload/pathogen.vim https://tpo.pe/pathogen.vim --create-dirs

# symlink dotfiles and vim plugins
ln -sf ~/.dotfiles/env/.zshrc ~/.zshrc
ln -sf ~/.dotfiles/env/.tmux.conf ~/.tmux.conf
ln -sf ~/.dotfiles/env/.vimrc ~/.vimrc
ln -sf ~/.dotfiles/env/bundle ~/.vim/bundle
ln -sf ~/.dotfiles/env/bundle/fzf ~/.fzf

# ensure modules are updated and setup fzf
git -C ~/.dotfiles submodule update --recursive --init
~/.fzf/install --key-bindings --completion --update-rc --no-bash
