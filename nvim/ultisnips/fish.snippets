#
# Fish Snippets
#

snippet fun "function" b
function ${1:name}
    ${0:${VISUAL}}
end
endsnippet

snippet if "if" b
if ${1:conditon}
    ${0:${VISUAL}}
end
endsnippet

snippet sw "switch" b
switch $1
    case $2
        ${3:${VISUAL}}
end
endsnippet

snippet for "for loop" b
for $1
    ${2:${VISUAL}}
end
endsnippet
